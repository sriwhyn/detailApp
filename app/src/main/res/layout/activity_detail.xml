<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMahasiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Mahasiswa"
            android:textAlignment="center"
            android:textColor="#BF9696"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgMahasiswa"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/txtNamaMhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sri Wahyuni"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtProdiMhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manajemen Informatika"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNimMhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1030"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>